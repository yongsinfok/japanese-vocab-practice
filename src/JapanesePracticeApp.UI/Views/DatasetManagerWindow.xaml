<Window x:Class="JapanesePracticeApp.UI.Views.DatasetManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Dataset Manager" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Vocabulary Dataset Manager"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Manage your vocabulary items without editing JSON files directly"
                       FontSize="12"
                       Foreground="Gray"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Week Selection -->
            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,5,0">
                <StackPanel>
                    <TextBlock Text="Weeks" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <ListBox ItemsSource="{Binding AvailableWeeks}"
                             SelectedItem="{Binding SelectedWeek}"
                             Height="400"
                             Margin="0,0,0,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding StringFormat='Week {0}'}" FontSize="14"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Content="Create New Week"
                            Command="{Binding CreateWeekCommand}"
                            Height="30"
                            Margin="0,5,0,0"/>

                    <Button Content="Refresh"
                            Command="{Binding RefreshCommand}"
                            Height="30"
                            Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Middle Panel - Vocabulary Items List -->
            <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5,0,5,0">
                <StackPanel>
                    <TextBlock Text="{Binding SelectedWeek, StringFormat='Vocabulary Items - Week {0}'}"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <DataGrid ItemsSource="{Binding VocabularyItems}"
                              SelectedItem="{Binding SelectedItem}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              Height="500">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Chinese" Binding="{Binding ChineseText}" Width="120"/>
                            <DataGridTextColumn Header="Japanese" Binding="{Binding JapaneseAnswer}" Width="150"/>
                            <DataGridTextColumn Header="Difficulty" Binding="{Binding DifficultyLevel}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Right Panel - Item Editor -->
            <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Item Editor"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>

                        <!-- Chinese Text -->
                        <TextBlock Text="Chinese Text:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ChineseText, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30"
                                 Margin="0,0,0,10"
                                 VerticalContentAlignment="Center"/>

                        <!-- Japanese Answer -->
                        <TextBlock Text="Japanese Answer:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding JapaneseAnswer, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30"
                                 Margin="0,0,0,10"
                                 VerticalContentAlignment="Center"/>

                        <!-- Alternative Answers -->
                        <TextBlock Text="Alternative Answers (comma-separated):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding AlternativeAnswers, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30"
                                 Margin="0,0,0,10"
                                 VerticalContentAlignment="Center"/>

                        <!-- Difficulty Level -->
                        <TextBlock Text="Difficulty Level:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox SelectedItem="{Binding DifficultyLevel}"
                                  Height="30"
                                  Margin="0,0,0,10">
                            <ComboBoxItem Content="Beginner"/>
                            <ComboBoxItem Content="Intermediate"/>
                            <ComboBoxItem Content="Advanced"/>
                        </ComboBox>

                        <!-- Hint -->
                        <TextBlock Text="Hint:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Hint, UpdateSourceTrigger=PropertyChanged}"
                                 Height="60"
                                 Margin="0,0,0,15"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"/>

                        <!-- Buttons -->
                        <Button Content="{Binding AddButtonText}"
                                Command="{Binding AddItemCommand}"
                                Height="35"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Margin="0,0,0,10"
                                Background="#4CAF50"
                                Foreground="White"
                                BorderThickness="0"/>

                        <Button Content="Delete Selected Item"
                                Command="{Binding DeleteItemCommand}"
                                Height="35"
                                FontSize="14"
                                Margin="0,0,0,10"
                                Background="#F44336"
                                Foreground="White"
                                BorderThickness="0"/>

                        <Button Content="Clear Form"
                                Command="{Binding ClearFormCommand}"
                                Height="30"
                                FontSize="12"
                                Margin="0,0,0,10"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="5"
                Padding="10"
                Margin="0,10,0,0"
                Background="AliceBlue">
            <TextBlock Text="{Binding StatusMessage}"
                       FontSize="12"
                       Foreground="DarkBlue"/>
        </Border>
    </Grid>
</Window>
