<Window x:Class="JapanesePracticeApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JapanesePracticeApp.UI"
        xmlns:vm="clr-namespace:JapanesePracticeApp.UI.ViewModels"
        mc:Ignorable="d"
        Title="Japanese Practice App" Height="600" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="{DynamicResource MenuBackgroundBrush}" Foreground="{DynamicResource MenuForegroundBrush}">
            <MenuItem Header="Tools">
                <MenuItem Header="Manage Datasets..." Click="ManageDatasets_Click"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Toggle Theme" Click="ToggleTheme_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Japanese Practice App"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"
                   Foreground="{DynamicResource PrimaryTextBrush}"/>

        <!-- Mode Selection - Removed, only Vocabulary Practice -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15" Visibility="Collapsed">
        </StackPanel>

        <!-- Week and Difficulty Selection -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <TextBlock Text="Week:"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Margin="0,0,10,0"
                       Foreground="{DynamicResource PrimaryTextBrush}"/>
            <ComboBox ItemsSource="{Binding AvailableWeeks}"
                      SelectedItem="{Binding SelectedWeek}"
                      Width="100"
                      Height="30"
                      FontSize="14"
                      Margin="0,0,30,0"
                      Background="{DynamicResource ComboBoxBackgroundBrush}"
                      Foreground="{DynamicResource PrimaryTextBrush}"
                      BorderBrush="{DynamicResource TextBoxBorderBrush}"/>

            <TextBlock Text="Difficulty:"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Margin="0,0,10,0"
                       Foreground="{DynamicResource PrimaryTextBrush}"/>
            <ComboBox ItemsSource="{Binding DifficultyLevels}"
                      SelectedItem="{Binding SelectedDifficulty}"
                      Width="120"
                      Height="30"
                      FontSize="14"
                      Background="{DynamicResource ComboBoxBackgroundBrush}"
                      Foreground="{DynamicResource PrimaryTextBrush}"
                      BorderBrush="{DynamicResource TextBoxBorderBrush}"/>
        </StackPanel>

        <!-- Question Display -->
        <Border Grid.Row="3"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="2"
                CornerRadius="5"
                Padding="20"
                Background="{DynamicResource PanelBackgroundBrush}">
            <StackPanel>
                <TextBlock Text="{Binding QuestionDisplay}"
                           FontSize="28"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,0,0,10"
                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                <TextBlock Text="{Binding HintDisplay}"
                           FontSize="14"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           FontStyle="Italic"/>
            </StackPanel>
        </Border>

        <!-- Answer Input -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,20,0,0">
            <TextBlock Text="Your Answer:"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="0,0,10,0"
                       Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBox Text="{Binding UserAnswer, UpdateSourceTrigger=PropertyChanged}"
                     Width="200"
                     Height="30"
                     FontSize="16"
                     VerticalContentAlignment="Center"
                     Background="{DynamicResource TextBoxBackgroundBrush}"
                     Foreground="{DynamicResource PrimaryTextBrush}"
                     BorderBrush="{DynamicResource TextBoxBorderBrush}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SubmitAnswerCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
        </StackPanel>

        <!-- Buttons - Removed -->

        <!-- Feedback Message -->
        <Border Grid.Row="6"
                BorderBrush="{DynamicResource FeedbackBorderBrush}"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="0,20,0,0"
                Background="{DynamicResource FeedbackBackgroundBrush}"
                Visibility="{Binding FeedbackMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding FeedbackMessage}"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Foreground="{DynamicResource FeedbackTextBrush}"/>
        </Border>

        <!-- Loading Indicator -->
        <StackPanel Grid.Row="7"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="Loading..."
                       FontSize="12"
                       Foreground="{DynamicResource SecondaryTextBrush}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
