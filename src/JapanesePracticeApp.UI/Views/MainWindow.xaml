<Window x:Class="JapanesePracticeApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JapanesePracticeApp.UI"
        xmlns:vm="clr-namespace:JapanesePracticeApp.UI.ViewModels"
        mc:Ignorable="d"
        Title="Japanese Practice App" Height="600" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Japanese Practice App"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

        <!-- Mode Selection - Removed, only Vocabulary Practice -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15" Visibility="Collapsed">
        </StackPanel>

        <!-- Week Selection (for Vocabulary mode) -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <TextBlock Text="Week:"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Margin="0,0,10,0"/>
            <ComboBox ItemsSource="{Binding AvailableWeeks}"
                      SelectedItem="{Binding SelectedWeek}"
                      Width="100"
                      Height="30"
                      FontSize="14"/>
        </StackPanel>

        <!-- Question Display -->
        <Border Grid.Row="3"
                BorderBrush="LightGray"
                BorderThickness="2"
                CornerRadius="5"
                Padding="20"
                Background="WhiteSmoke">
            <StackPanel>
                <TextBlock Text="{Binding QuestionDisplay}"
                           FontSize="28"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Text="{Binding HintDisplay}"
                           FontSize="14"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="Gray"
                           FontStyle="Italic"/>
            </StackPanel>
        </Border>

        <!-- Answer Input -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,20,0,0">
            <TextBlock Text="Your Answer:"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="0,0,10,0"/>
            <TextBox Text="{Binding UserAnswer, UpdateSourceTrigger=PropertyChanged}"
                     Width="200"
                     Height="30"
                     FontSize="16"
                     VerticalContentAlignment="Center">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SubmitAnswerCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
        </StackPanel>

        <!-- Buttons - Removed -->

        <!-- Feedback Message -->
        <Border Grid.Row="6"
                BorderBrush="LightBlue"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="0,20,0,0"
                Background="AliceBlue"
                Visibility="{Binding FeedbackMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding FeedbackMessage}"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Foreground="DarkBlue"/>
        </Border>

        <!-- Loading Indicator -->
        <StackPanel Grid.Row="7"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="Loading..."
                       FontSize="12"
                       Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>
