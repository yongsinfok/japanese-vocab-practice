<Window x:Class="JapanesePracticeApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JapanesePracticeApp.UI"
        xmlns:vm="clr-namespace:JapanesePracticeApp.UI.ViewModels"
        mc:Ignorable="d"
        Title="Japanese Grammar Practice" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Japanese Grammar Practice"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Question Display -->
        <Border Grid.Row="1"
                BorderBrush="LightGray"
                BorderThickness="2"
                CornerRadius="5"
                Padding="20"
                Background="WhiteSmoke">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding CurrentQuestion.QuestionText, FallbackValue='Click Load Question to start'}"
                           FontSize="20"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </ScrollViewer>
        </Border>

        <!-- Answer Input -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,20,0,0">
            <TextBlock Text="Your Answer:"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="0,0,10,0"/>
            <TextBox Text="{Binding UserAnswer, UpdateSourceTrigger=PropertyChanged}"
                     Width="200"
                     Height="30"
                     FontSize="16"
                     VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="Load Question"
                    Command="{Binding LoadQuestionCommand}"
                    Width="120"
                    Height="35"
                    Margin="0,0,10,0"
                    FontSize="14"/>
            <Button Content="Submit Answer"
                    Command="{Binding SubmitAnswerCommand}"
                    Width="120"
                    Height="35"
                    FontSize="14"/>
        </StackPanel>

        <!-- Feedback Message -->
        <Border Grid.Row="4"
                BorderBrush="LightBlue"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="0,20,0,0"
                Background="AliceBlue"
                Visibility="{Binding FeedbackMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding FeedbackMessage}"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Foreground="DarkBlue"/>
        </Border>

        <!-- Loading Indicator -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="Loading..."
                       FontSize="12"
                       Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>
