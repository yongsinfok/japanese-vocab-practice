<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="WhiteSmoke"/>
    <SolidColorBrush x:Key="BorderBrush" Color="LightGray"/>
    <SolidColorBrush x:Key="FeedbackBackgroundBrush" Color="AliceBlue"/>
    <SolidColorBrush x:Key="FeedbackBorderBrush" Color="LightBlue"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="Black"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="Gray"/>
    <SolidColorBrush x:Key="FeedbackTextBrush" Color="DarkBlue"/>

    <!-- Control Colors -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="LightGray"/>
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#DDDDDD"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="Black"/>

    <!-- Menu Colors -->
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="MenuForegroundBrush" Color="Black"/>

</ResourceDictionary>
